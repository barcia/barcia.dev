---
import { NAV_MAIN } from "@/site.config";

const { pathname } = Astro.url;
const isActive = (url: string) => pathname.split("/")[1] === url.split("/")[1];
---

<nav class="py-6 mb-6 md:mb-16">
	<ul class="flex gap-8 justify-end">
		{
			NAV_MAIN.map((item) => (
				<li>
					<a class:list={["no-underline", { "font-bold": isActive(item.url) }]} href={item.url}>
						{item.label}
					</a>
				</li>
			))
		}
	</ul>
</nav>
