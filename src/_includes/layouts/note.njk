{% extends "layouts/base.njk" %}

{% block body %}
{% include "parts/nav.njk" %}

<main class="wrapper">
		<header>
			<h1 class="post-title">Note {{ page.fileSlug }}</h1>
		</header>

		<article id="{{ page.fileSlug }}" class="Note{% for class in class %} Note--{{ class }} {% endfor %}">
		{# <article id="{{ page.fileSlug }}" class="Note{% if type %} Note--{{type}}{% endif %}{% if contrast %} Note--{{contrast}}{% endif %}"> #}
			<div>{{ content | safe }}</div>
			<div class="Note-metadata">
				<time class="Note-date" datetime="{{ date | dateTo('iso') }}" title="{{ date | dateTo("dd LLLL, yyyy - HH:mm") }}">{{ date | dateTo("dd MMMM, yyyy") }}</time>
				<span class="Note-links">
				{% if github %}
					<a href="{{ github }}" target="blank" aria-label="View in GitHub" title="View in GitHub">
						<img src="/assets/social/github.svg" alt="GitHub logo">
					</a>
				{% endif %}
				{% if twitter %}
					<a href="{{ url.twitter.root }}{{ site.author.twitter }}{{ url.twitter.status }}{{ twitter }}" target="blank" title="View in Twitter">
						<img src="/assets/social/twitter.svg" alt="Twitter logo">
					</a>
				{% endif %}
				</span>
			</div>
		</article>
</main>


{% include "parts/footer.njk" %}
{% endblock body %}
