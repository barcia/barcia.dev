---
import { SOCIAL } from "@/assets/contants";
import Icon, { type IconName } from "@/components/Icon.astro";
---

<section class="Section Contact">
    <div class="Container is-small">
        <h2>Get in touch</h2>
        <ul class="contact-list">
            {
                Object.entries(SOCIAL).map(([key, value]) => (
                    <li>
                        <a
                            href={value.url}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="contact-link"
                        >
                            {" "}
                            <Icon name={key as IconName} />
                            {value.name}
                        </a>
                    </li>
                ))
            }
        </ul>
    </div>
</section>

<style>
    ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 1rem;

        @media (width > 768px) {
            gap: 2rem;
            flex-direction: row;
        }
    }

    a {
        color: inherit;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 0;
        font-size: 1.25rem;

        &:hover {
            color: white;
        }
    }

    .icon {
        width: 1rem;
        height: 1rem;
    }
</style>

<script>
    import gsap from "gsap";
    import ScrollTrigger from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    gsap.from(".contact-list li", {
        opacity: 0,
        x: 20,
        stagger: 0.1,
        duration: 1,
        ease: "power3.out",
        scrollTrigger: {
            trigger: ".Contact",
            start: "top 90%",
        },
    });
</script>
