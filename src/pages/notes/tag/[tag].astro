---
import Layout from "@/components/layouts/list.astro";
import { getNotes } from "@/utils/collections/notes";

export async function getStaticPaths() {
	const { tags } = await getNotes();
	return tags.map((item) => {
		return {
			params: { tag: item.tag },
			props: { tag: item.tag, notes: item.notes },
		};
	});
}

const { tag, notes } = Astro.props;
---

<Layout title={`Notes: ${tag}`} list={notes} />
